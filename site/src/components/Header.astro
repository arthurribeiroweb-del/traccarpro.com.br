---
const CLIENT_AREA_URL = 'https://traccarpro.com.br/login';
---
<header class="sticky top-0 z-50 border-b border-border/60 bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/80">
  <div class="mx-auto flex h-16 max-w-content items-center justify-between gap-4 px-6">
    <a href="/" class="text-xl font-semibold tracking-tight text-white">
      TraccarPro
    </a>
    <nav class="flex items-center gap-2 sm:gap-4">
      <a
        href="/cadastro"
        class="inline-flex min-h-[44px] min-w-[44px] shrink-0 items-center justify-center rounded-lg bg-emerald-600 px-4 py-2.5 text-sm font-medium text-white transition hover:bg-emerald-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-500 sm:px-5"
      >
        Fazer cadastro
      </a>
      <a
        href={CLIENT_AREA_URL}
        target="_self"
        rel="noopener"
        class="inline-flex min-h-[44px] min-w-[44px] shrink-0 items-center justify-center rounded-lg bg-accent px-4 py-2.5 text-sm font-medium text-white transition hover:bg-accent-hover focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent sm:px-5"
      >
        Acessar painel
      </a>
    </nav>
  </div>
</header>
