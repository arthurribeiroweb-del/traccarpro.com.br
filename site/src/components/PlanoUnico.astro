---
const WHATSAPP_PLANO = 'https://api.whatsapp.com/send/?phone=559491796309&text=' + encodeURIComponent(
  'Olá! Gostaria de saber mais sobre o plano do TraccarPro.'
) + '&type=phone_number&app_absent=0';

const itens = [
  { label: 'Cartão', valor: 'R$ 49,90/mês (recorrente)' },
  { label: 'Instalação', valor: 'R$ 150,00 (pagamento único).' },
  { label: 'Equipamento', valor: 'Você não precisa comprar um rastreador.' },
  { label: 'Chip Multi Operadora', valor: 'Baixo consumo e ampla cobertura' },
];
---
<section id="preco" class="border-b border-border/40 bg-surface/30 py-16 sm:py-20">
  <div class="mx-auto max-w-content px-6">
    <h2 class="text-center text-2xl font-semibold tracking-tight text-white sm:text-3xl">
      Plano único. Sem surpresas.
    </h2>
    <div class="mx-auto mt-10 max-w-lg rounded-xl border border-border/60 bg-background/50 p-6 sm:p-8">
      <ul class="space-y-4">
        {itens.map((item) => (
          <li class="flex flex-col gap-1 sm:flex-row sm:items-start sm:gap-3">
            <span class="text-sm font-medium text-accent shrink-0">{item.label}:</span>
            <span class="text-sm text-[#a1a1aa]">{item.valor}</span>
          </li>
        ))}
      </ul>
      <div class="mt-8 text-center">
        <a
          href={WHATSAPP_PLANO}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex min-h-[44px] min-w-[44px] items-center justify-center gap-2 rounded-lg bg-[#25D366] px-6 py-3 text-base font-medium text-white transition hover:bg-[#1da851] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[#25D366]"
        >
          <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
